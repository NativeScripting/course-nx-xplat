{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "lib": ["es2018", "es2017", "dom", "webworker", "es6"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@nuvious/*": ["../../libs/*"],
      "@nuvious/nativescript": [
        "../../xplat/nativescript/index.ts"
      ],
      "@nuvious/nativescript/*": [
        "../../xplat/nativescript/*"
      ],
      "*": ["./node_modules/*"]
    }
  },
  "files": ["./references.d.ts", "./src/main.ts"],
  "include": [
    "../../xplat/**/*.{ios,android}.ts",
    "../../xplat/nativescript/workers/**/*.worker.ts"
  ],
  "exclude": [
    "../../xplat/nativescript/plugins/**/node_modules/**"
  ]
}
